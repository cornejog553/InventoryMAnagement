    <body>
        <h1>New Jersey</h1>
        <form action="/new" method="POST">
            <label for="player">Player:</label>
            <select id="player" name="player">
                <% players.map((player) => { %>
                    <option value="<%= player.player_id %>"><%= player.name %></option>
                <% }) %>
            </select><br>

            <label for="team">Team:</label>
